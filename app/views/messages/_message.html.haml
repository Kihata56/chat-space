.main-chat__message-list__view-room
  .main-chat__message-list__view-room__items-room
    .main-chat__message-list__view-room__items-room__three-items
      .main-chat__message-list__view-room__items-room__three-items__name
        = message.user.name
      .main-chat__message-list__view-room__items-room__three-items__days
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main-chat__message-list__view-room__items-room__message
      - if message.content.present?
        %p.Message__content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?
