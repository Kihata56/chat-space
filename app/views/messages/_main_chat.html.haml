.main-chat
  .main-chat__group-info
    .main-chat__group-info__left-room
      .main-chat__group-info__left-room__test-room
        .main-chat__group-info__left-room__test-room__test
          = @group.name
        .main-chat__group-info__left-room__test-room__member-name
          .main-chat__group-info__left-room__test-room__member-names__name
            - @group.users.each do |user|
              = user.name
    .main-chat__group-info__edit-room
      .main-chat__group-info__edit-room__edit
        = link_to edit_group_path(@group), class: "main-chat__group-info__edit-room__edit__edit-text" do
          Edit
      
  .main-chat__message-list
    = render @messages
  .main-chat__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .main-chat__message-form__message-box
        .main-chat__message-form__message-box__type-icon
          = f.text_field :content, class: 'main-chat__message-form__message-box__type-icon__type', placeholder: 'type a message'
          = f.label :image, class: 'main-chat__message-form__message-box__type-icon__icon' do
            = icon('far', 'image')
            = f.file_field :image, class: 'main-chat__message-form__message-box__type-icon__icon__icon-file'
        = f.submit 'Send', class: 'main-chat__message-form__message-box__send'  